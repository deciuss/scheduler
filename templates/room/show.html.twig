{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}

    <h1 class="h1">Room</h1>
    <p class="lead my-3">
        Room {{ room }} details
    </p>

    <div class="my-3">
        <a class="btn btn-primary" href="{{ path('room_index', {'plan': room.plan.id}) }}">Back To List</a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ room.capacity }}</td>
            </tr>
            <tr>
                <th>Features</th>
                <td>
                    {% for feature in room.features %}
                        {{ feature }},
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

{% endblock %}
