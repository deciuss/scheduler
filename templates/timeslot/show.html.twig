{% extends 'base.html.twig' %}

{% block title %}Timeslot{% endblock %}

{% block body %}
    <h1>Timeslot</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ timeslot.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ timeslot.start ? timeslot.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ timeslot.end ? timeslot.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Map_id</th>
                <td>{{ timeslot.mapId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('timeslot_index', {'plan': timeslot.plan.id}) }}"> Back To List</a>

    <a href="{{ path('timeslot_edit', {'id': timeslot.id}) }}">edit</a>

    {{ include('timeslot/_delete_form.html.twig') }}
{% endblock %}
