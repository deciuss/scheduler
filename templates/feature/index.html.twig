{% extends 'base.html.twig' %}

{% block title %}Feature List{% endblock %}

{% block body %}

    <h3 class="h3">Feature List</h3>
    <p class="lead my-3">
        List of features for plan {{ plan }}
    </p>

    <div class="my-3">
        <a class="btn btn-primary" href="{{ path('plan_dashboard', {'id': plan.id}) }}"> Back To Dashboard</a>
        <a class="btn btn-primary float-right mr-3" href="{{ path('feature_new', {'plan': plan.id}) }}">Create New</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for feature in features %}
            <tr>
                <td>{{ feature.id }}</td>
                <td>{{ feature.name }}</td>
                <td>
                    <a class="btn btn-primary float-right mx-1" href="{{ path('feature_edit', {'id': feature.id}) }}">Edit</a>
                    <a class="btn btn-primary float-right mx-1" href="{{ path('feature_show', {'id': feature.id}) }}">Show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
