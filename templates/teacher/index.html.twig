{% extends 'base.html.twig' %}

{% block title %}Teacher List{% endblock %}

{% block body %}

    <h2 class="h2">Teacher List</h2>
    <p class="lead my-3">
        List of teachers for plan {{ plan }}
    </p>

    <div class="my-3">
        <a class="btn btn-primary" href="{{ path('plan_dashboard', {'id': plan.id}) }}"> Back To Dashboard</a>
        <a class="btn btn-primary float-right mr-3" href="{{ path('teacher_new', {'plan': plan.id}) }}">Create New</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.id }}</td>
                <td>{{ teacher.name }}</td>
                <td>
                    <a class="btn btn-primary float-right mx-1" href="{{ path('teacher_edit', {'id': teacher.id}) }}">Edit</a>
                    <a class="btn btn-primary float-right mx-1" href="{{ path('teacher_show', {'id': teacher.id}) }}">Show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
