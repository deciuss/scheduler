{% extends 'base.html.twig' %}

{% block title %}Teacher{% endblock %}

{% block body %}

    <h1 class="h1 my-3">Teacher</h1>
    <p class="lead my-3">
        Teacher {{ teacher }} details
    </p>

    <div class="my-3">
        <a class="btn btn-primary" href="{{ path('teacher_index', {'plan': teacher.plan.id}) }}">Back To List</a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ teacher.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ teacher.name }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
